@* Empty state component for lists with no data *@

<div class="empty-state" role="status" aria-live="polite">
    <div class="empty-state-icon">
        <i class="fas @Icon" aria-hidden="true"></i>
    </div>
    <h3 class="empty-state-title">@Title</h3>
    <p class="empty-state-description">@Description</p>
    
    @if (!string.IsNullOrEmpty(HelpText))
    {
        <div class="empty-state-help" style="margin-bottom: 1.5rem; padding: 1rem; background: var(--bg-secondary); border-radius: 8px; max-width: 400px; margin-left: auto; margin-right: auto;">
            <p style="margin: 0; font-size: 0.9rem;">
                <i class="fas fa-lightbulb text-warning" aria-hidden="true"></i>
                <strong>Tip:</strong> @HelpText
            </p>
        </div>
    }
    
    @if (ShowAction && OnActionClick.HasDelegate)
    {
        <button class="btn btn-primary" @onclick="OnActionClick"
                style="font-weight: 600; padding: 0.75rem 1.5rem;">
            <i class="fas @ActionIcon" aria-hidden="true"></i> @ActionText
        </button>
    }
    
    @if (!string.IsNullOrEmpty(SecondaryActionText) && OnSecondaryActionClick.HasDelegate)
    {
        <button class="btn btn-outline" @onclick="OnSecondaryActionClick" style="margin-left: 0.5rem;">
            <i class="fas @SecondaryActionIcon" aria-hidden="true"></i> @SecondaryActionText
        </button>
    }
</div>

<style>
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: var(--text-secondary);
    }

    .empty-state-icon {
        font-size: 3rem;
        color: var(--color-gray-400);
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .empty-state-description {
        margin-bottom: 1.5rem;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

@code {
    [Parameter] public string Icon { get; set; } = "fa-inbox";
    [Parameter] public string Title { get; set; } = "No Data Found";
    [Parameter] public string Description { get; set; } = "There are no items to display.";
    [Parameter] public string? HelpText { get; set; }
    [Parameter] public bool ShowAction { get; set; } = false;
    [Parameter] public string ActionText { get; set; } = "Add New";
    [Parameter] public string ActionIcon { get; set; } = "fa-plus";
    [Parameter] public EventCallback OnActionClick { get; set; }
    [Parameter] public string? SecondaryActionText { get; set; }
    [Parameter] public string SecondaryActionIcon { get; set; } = "fa-question-circle";
    [Parameter] public EventCallback OnSecondaryActionClick { get; set; }
}
