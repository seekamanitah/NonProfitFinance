@namespace NonProfitFinance.Components.Shared

<div class="action-button-group @(Vertical ? "action-button-group-vertical" : "") @(Size.ToString().ToLower()) @CssClass">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @foreach (var action in Actions)
        {
            <button type="button"
                    class="action-btn @(action.IsPrimary ? "primary" : "") @(action.IsDanger ? "danger" : "") @(action.IsDisabled ? "disabled" : "")"
                    @onclick="() => HandleAction(action)"
                    disabled="@(action.IsDisabled || action.IsLoading)"
                    title="@action.Tooltip">
                @if (action.IsLoading)
                {
                    <span class="action-btn-spinner"></span>
                }
                else if (!string.IsNullOrEmpty(action.Icon))
                {
                    <i class="@action.Icon"></i>
                }
                @if (!IconsOnly && !string.IsNullOrEmpty(action.Label))
                {
                    <span class="action-btn-label">@action.Label</span>
                }
            </button>
        }
    }
</div>

<style>
    .action-button-group {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .action-button-group-vertical {
        flex-direction: column;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.375rem;
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--border-color);
        background: var(--bg-primary);
        color: var(--text-primary);
        border-radius: var(--radius);
        cursor: pointer;
        transition: all 0.15s ease;
        font-size: 0.875rem;
        white-space: nowrap;
    }

    .action-btn:hover:not(:disabled) {
        background: var(--bg-secondary);
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

    .action-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .action-btn.primary {
        background: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .action-btn.primary:hover:not(:disabled) {
        background: var(--primary-hover, #2563eb);
        border-color: var(--primary-hover, #2563eb);
        color: white;
    }

    .action-btn.danger {
        color: #ef4444;
    }

    .action-btn.danger:hover:not(:disabled) {
        background: rgba(239, 68, 68, 0.1);
        border-color: #ef4444;
        color: #dc2626;
    }

    .action-btn i {
        font-size: 0.875em;
    }

    .action-btn-label {
        font-weight: 500;
    }

    .action-btn-spinner {
        width: 0.875rem;
        height: 0.875rem;
        border: 2px solid currentColor;
        border-top-color: transparent;
        border-radius: 50%;
        animation: action-spin 0.6s linear infinite;
    }

    @@keyframes action-spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Size variants */
    .small .action-btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.8125rem;
    }

    .small .action-btn i {
        font-size: 0.75rem;
    }

    .small .action-btn-spinner {
        width: 0.75rem;
        height: 0.75rem;
    }

    .large .action-btn {
        padding: 0.625rem 1rem;
        font-size: 1rem;
    }

    .large .action-btn i {
        font-size: 1rem;
    }

    /* Connected buttons (button group style) */
    .action-button-group.connected .action-btn {
        border-radius: 0;
        margin-left: -1px;
    }

    .action-button-group.connected .action-btn:first-child {
        border-radius: var(--radius) 0 0 var(--radius);
        margin-left: 0;
    }

    .action-button-group.connected .action-btn:last-child {
        border-radius: 0 var(--radius) var(--radius) 0;
    }

    .action-button-group.connected .action-btn:hover:not(:disabled) {
        z-index: 1;
    }

    /* Icon-only mode */
    .action-button-group:not(.icons-only) .action-btn:has(.action-btn-label) {
        min-width: auto;
    }

    @@media (max-width: 640px) {
        .action-btn-label {
            display: none;
        }
        
        .action-btn {
            padding: 0.5rem;
        }
    }
</style>

@code {
    public enum ButtonSize
    {
        Small,
        Medium,
        Large
    }

    public class ActionButton
    {
        public string Label { get; set; } = string.Empty;
        public string? Icon { get; set; }
        public string? Tooltip { get; set; }
        public bool IsPrimary { get; set; }
        public bool IsDanger { get; set; }
        public bool IsDisabled { get; set; }
        public bool IsLoading { get; set; }
        public Func<Task>? OnClick { get; set; }
        public object? Data { get; set; }
    }

    [Parameter] public List<ActionButton> Actions { get; set; } = [];
    [Parameter] public ButtonSize Size { get; set; } = ButtonSize.Medium;
    [Parameter] public bool Vertical { get; set; } = false;
    [Parameter] public bool IconsOnly { get; set; } = false;
    [Parameter] public bool Connected { get; set; } = false;
    [Parameter] public string? CssClass { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback<ActionButton> OnActionClick { get; set; }

    private string SizeClass => Size switch
    {
        ButtonSize.Small => "small",
        ButtonSize.Large => "large",
        _ => "medium"
    };

    private async Task HandleAction(ActionButton action)
    {
        if (action.IsDisabled || action.IsLoading) return;

        if (action.OnClick != null)
        {
            await action.OnClick();
        }

        await OnActionClick.InvokeAsync(action);
    }
}
