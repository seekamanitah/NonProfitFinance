<!-- Keyboard Shortcuts Help -->
<div class="help-section">
    <nav class="help-breadcrumb">
        <a href="/help">Help</a> / <span>Keyboard Shortcuts</span>
    </nav>
    
    <h1><i class="fas fa-keyboard"></i> Keyboard Shortcuts</h1>
    <p class="help-intro">Power user features for faster navigation.</p>
    
    <div class="help-block">
        <h2>Global Shortcuts</h2>
        <p>These work from anywhere in the app:</p>
        
        <table class="help-table shortcut-table">
            <thead>
                <tr><th>Shortcut</th><th>Action</th></tr>
            </thead>
            <tbody>
                <tr>
                    <td><kbd>Ctrl</kbd> + <kbd>N</kbd></td>
                    <td>Quick Add Transaction</td>
                </tr>
                <tr>
                    <td><kbd>Ctrl</kbd> + <kbd>F</kbd></td>
                    <td>Focus Global Search</td>
                </tr>
                <tr>
                    <td><kbd>Ctrl</kbd> + <kbd>S</kbd></td>
                    <td>Save (when in a form)</td>
                </tr>
                <tr>
                    <td><kbd>Escape</kbd></td>
                    <td>Close Modal/Dialog</td>
                </tr>
                <tr>
                    <td><kbd>Shift</kbd> + <kbd>?</kbd></td>
                    <td>Show Keyboard Shortcuts Help</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="help-block">
        <h2>In Search Results</h2>
        <table class="help-table shortcut-table">
            <tbody>
                <tr>
                    <td><kbd>Enter</kbd></td>
                    <td>Open first result</td>
                </tr>
                <tr>
                    <td><kbd>?</kbd> <kbd>?</kbd></td>
                    <td>Navigate results</td>
                </tr>
                <tr>
                    <td><kbd>Escape</kbd></td>
                    <td>Clear search</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="help-tip">
        <i class="fas fa-lightbulb"></i>
        <strong>Tip:</strong> Keyboard shortcuts can be disabled in <a href="/settings">Settings</a> ? Accessibility.
    </div>
</div>
