@page "/error"
@page "/error/{statusCode:int}"
@using System.Diagnostics
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>@GetPageTitle() - NonProfit Finance</PageTitle>

<div class="error-page">
    <div class="error-container">
        <div class="error-icon">
            <i class="fas @GetErrorIcon()"></i>
        </div>
        
        <h1>@GetErrorTitle()</h1>
        
        <p class="error-message">
            @GetErrorMessage()
        </p>
        
        @if (!string.IsNullOrEmpty(RequestId))
        {
            <p class="error-id">
                <strong>Error Reference:</strong> @RequestId
            </p>
        }
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i> Return to Dashboard
            </a>
            <button class="btn btn-secondary" onclick="window.history.back()">
                <i class="fas fa-arrow-left"></i> Go Back
            </button>
        </div>
        
        <div class="error-help">
            <p>If this problem persists, please contact support with the error reference above.</p>
        </div>
    </div>
</div>

<style>
    .error-page {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
        background: var(--bg-secondary, #f3f4f6);
    }
    
    .error-container {
        max-width: 500px;
        text-align: center;
        background: var(--surface-color, #ffffff);
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .error-icon {
        font-size: 4rem;
        color: var(--danger-color, #dc2626);
        margin-bottom: 1.5rem;
    }
    
    .error-container h1 {
        color: var(--text-primary, #111827);
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    
    .error-message {
        color: var(--text-secondary, #6b7280);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }
    
    .error-id {
        background: var(--gray-100, #f3f4f6);
        padding: 0.75rem;
        border-radius: 6px;
        font-family: monospace;
        font-size: 0.875rem;
        margin-bottom: 1.5rem;
    }
    
    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 1.5rem;
    }
    
    .error-help {
        font-size: 0.875rem;
        color: var(--text-muted, #9ca3af);
    }
</style>

@code {
[Parameter]
public int? StatusCode { get; set; }

[CascadingParameter]
public HttpContext? HttpContext { get; set; }
    
public string? RequestId { get; set; }
    
protected override void OnInitialized()
{
    RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
        
    // Set the correct response status code to avoid infinite loop
    var httpContext = HttpContextAccessor?.HttpContext;
    if (httpContext != null && StatusCode.HasValue)
    {
        // Clear the response status - we're handling it
        httpContext.Response.StatusCode = StatusCode.Value;
        // Mark the response as started so no more redirects happen
        if (!httpContext.Response.HasStarted)
        {
            // This page is intentionally handling the error
        }
    }
}

    private string GetPageTitle() => StatusCode switch
    {
        400 => "Bad Request",
        401 => "Unauthorized",
        403 => "Access Denied",
        404 => "Page Not Found",
        500 => "Server Error",
        502 => "Bad Gateway",
        503 => "Service Unavailable",
        _ => "Error"
    };

    private string GetErrorIcon() => StatusCode switch
    {
        404 => "fa-search",
        401 or 403 => "fa-lock",
        500 or 502 or 503 => "fa-server",
        _ => "fa-exclamation-triangle"
    };

    private string GetErrorTitle() => StatusCode switch
    {
        400 => "Bad Request",
        401 => "Unauthorized Access",
        403 => "Access Denied",
        404 => "Page Not Found",
        500 => "Internal Server Error",
        502 => "Bad Gateway",
        503 => "Service Unavailable",
        _ => "Something went wrong"
    };

    private string GetErrorMessage() => StatusCode switch
    {
        400 => "The server could not understand the request. Please check your input and try again.",
        401 => "You need to be logged in to access this page. Please log in and try again.",
        403 => "You don't have permission to access this resource. Contact your administrator if you believe this is an error.",
        404 => "The page you're looking for doesn't exist. It may have been moved or deleted.",
        500 => "We're sorry, but an unexpected error occurred on the server. Our team has been notified.",
        502 => "The server received an invalid response from an upstream server. Please try again later.",
        503 => "The service is temporarily unavailable. Please try again in a few minutes.",
        _ => "We're sorry, but an unexpected error occurred while processing your request. Our team has been notified and is working to fix the issue."
    };
}
