# ================================================================
# NonProfit Finance - Environment Variables
# ================================================================
# Copy this file to .env and fill in your actual values
# NOTE: NEVER commit .env to Git (already in .gitignore)

# ================================================================
# DOCKER & PORT SETTINGS
# ================================================================
PORT=7171
COMPOSE_PROJECT_NAME=nonprofit-finance

# ================================================================
# ASP.NET CORE SETTINGS
# ================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# ================================================================
# DATABASE CONNECTION
# ================================================================
# Format for SQLite: Data Source=/app/data/NonProfitFinance.db
DB_CONNECTION_STRING=Data Source=/app/data/NonProfitFinance.db

# ================================================================
# SECURITY SETTINGS
# ================================================================
# Generate a strong key: openssl rand -base64 32
# Or use: [Convert]::ToBase64String([System.Text.Encoding]::UTF8.GetBytes((New-Guid).ToString()))
ASPNETCORE_SECURITY_KEY=change-this-to-a-secure-random-string-in-production

# ================================================================
# BACKUP ENCRYPTION KEY - IMPORTANT!
# ================================================================
# This is used by BackupService for encrypting backups
# Use the same secure Base64 key as above or generate a new one
Backup:EncryptionKey=QXVkaXRSZW1lZGlhdGlvbjIwMjZLZXk9MDEyMzQ1Njc4OWFiY2RlZg==

# ================================================================
# EMAIL / SMTP SETTINGS (Optional)
# ================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_ADDRESS=noreply@organization.org
NOTIFICATION_EMAIL=admin@organization.org

# ================================================================
# OCR SETTINGS (Optional)
# ================================================================
OCR_ENABLED=true
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# ================================================================
# TEXT-TO-SPEECH SETTINGS (Optional)
# ================================================================
TTS_ENABLED=true
TTS_LANGUAGE=en-US

# ================================================================
# BACKUP SETTINGS
# ================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/app/backups

# ================================================================
# LOGGING SETTINGS
# ================================================================
LOGGING_LEVEL=Information

# ================================================================
# FEATURE FLAGS (Optional)
# ================================================================
ENABLE_DEMO_DATA=true
ENABLE_INVENTORY_MODULE=true
ENABLE_MAINTENANCE_MODULE=false

